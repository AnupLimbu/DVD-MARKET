@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
        <li data-target="#myCarousel" data-slide-to="4"></li>
        <li data-target="#myCarousel" data-slide-to="5"></li>
        <li data-target="#myCarousel" data-slide-to="6"></li>
        <li data-target="#myCarousel" data-slide-to="7"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/everest.png" alt="ASP.NET" class="img-responsive" style="width:100%" />
            <div class="carousel-caption" role="option">
                <p>
                    Everest Video Store
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/store.jpg" alt="Visual Studio" class="img-responsive" style="width:100%" />
            <div class="carousel-caption" role="option">
                <p>
                    A look inside our store!
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/avengers.png" alt="Microsoft Azure" class="img-responsive" style="width:100%" />
            <div class="carousel-caption" role="option">
                <p>
                    Get Avengers: The end game in Blu-Ray!
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/wwy.jpg" alt="Microsoft Azure" class="img-responsive" style="width:100%" />
            <div class="carousel-caption" role="option">
                <p>
                    Get Weathring with you in Blu-Ray!
                </p>
            </div>
        </div>
       

    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row" style="text-align:center; padding: 10px 0 10px 0; font-size: 40px;">
    <span class="text-slider-items">
        Everest DVD,Video Store for everyone,Grab the latest movies in Blu-Ray,Cheap Prices,Rent a DVD, Thank You For visiting!
    </span>
    <strong class="text-slider"></strong>
</div>